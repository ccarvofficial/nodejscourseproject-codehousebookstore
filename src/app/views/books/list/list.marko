<html>
  <head>
    <meta charset="utf-8">
  </head>
  <body>
    <h1>Code House</h1>

    <table id="books">
      <tr>
        <td>ID</td>
        <td>Title</td>
        <td>Price</td>
        <td>Edit</td>
        <td>Remove</td>
      </tr>
      <for|book| of=data.books>
        <tr id="book_${book.id}">
            <td>${book.id}</td>
            <td>${book.title}</td>
            <td>${book.price}</td>
            <td><a href="/books/form/${book.id}">Edit</a></td> 
            <td><a href="#" data-ref="${book.id}" data-type="remove">Remove</a></td>
        </tr>
      </for>
    </table>

    <script src="/static/js/remove-book.js"></script> 
  </body>
</html> 